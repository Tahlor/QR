{
    "name": "decode_cnn",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":false,
    "data_loader": {
        "data_set_name": "QRDataset",

        "data_dir": "../data/QR/",
        "batch_size": 16,
        "shuffle": true,
        "num_workers": 2

    },
    "validation": {
        "shuffle": false,
        "batch_size": 32,
	"NOTE":"this copies values from data_loader if not present here"
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0002,
        "weight_decay": 0,
        "betas": [0.5,0.999]
    },
    "optimizer_type_discriminator": "Adam",
    "optimizer_discriminator": {
        "lr": 0.0002,
        "weight_decay": 0,
        "betas": [0.5,0.999]
    },
    "loss": {
        "char": "cross_entropy",
	"valid": "sigmoid_BCE_loss"
    },
    "loss_weights": {
	"char": 1.0,
	"valid": 1.0

    },
    "loss_params":
        {
        },
    "metrics": [],
    "trainer": {
        "class": "QRDecoderTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 10000,
        "save_step_minor": 100,
        "log_step": 100,
        "verbosity": 1,
        "monitor": "loss",

        "curriculum": {
            "0": [     
                        ["?"]
	    ]
        },
        "use_learning_schedule": false,

        "print_dir": "train_out/example",
        "serperate_print_every": 5000,
        "print_every": 100
    },
    "arch": "DecoderCNN", 
    "model": {
	   "input_size": [256,256],
	   "cnn_layer_specs": [3,32,"ccv--32","M","ccv--64","ccv--64","M","ccv--128","ccv--128","ccv--128","M","ccv--256","ccv--256","ccv--256"],
	   "fully_connected_specs": ["FC2048","FC2048"],
	   "max_message_len": 17


    }
}
